{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
      "target": "ES2022",
      "module": "esnext",
      "moduleResolution": "bundler",
      "jsx": "preserve",
      "strict": true,
      "esModuleInterop": true,
      "allowJs": true,
      "baseUrl": "src",
      "paths": {
        "@/*": ["*"]
      },
      "outDir": "dist",
      "lib": ["dom", "dom.iterable", "esnext"],
      "skipLibCheck": true,
      "noEmit": true,
      "incremental": true,
      "resolveJsonModule": true,
      "isolatedModules": true,
      "plugins": [{ "name": "next" }],
      "typeRoots": ["./node_modules/@types", "./src/types"],
    },
    "include": [
      "src",
      "../../node_modules/next/types/**/*.ts",
      ".next/types/**/*.ts",
      "types/**/*.d.ts"
    ],
    "exclude": ["node_modules"]
  }
  